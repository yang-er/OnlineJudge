@model ProblemArchive
@{ Layout = null; }

<form asp-action="Archive" method="post">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Publish problem p@(Model.ProblemId)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="PublicId">Public ID</label>
                        <input asp-for="PublicId" class="form-control" />
                        <small class="text-muted">After publishing, this ID cannot be changed. Zero for auto assign.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagName">Tags</label>
                        <input asp-for="TagName" class="form-control" />
                        <small class="text-muted">Used to show as problem category, splitting with commas.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
