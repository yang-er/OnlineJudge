@model TestcaseUploadModel
@{ Layout = null; }

<form asp-route-pid="@ViewData["pid"]" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Problem</label>
                        <div class="form-control">@ViewData["pid"]</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="InputContent"></label>
                        <div class="custom-file">
                            <input asp-for="InputContent" class="custom-file-input" id="inputFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="OutputContent"></label>
                        <div class="custom-file">
                            <input asp-for="OutputContent" class="custom-file-input" id="outputFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Point"></label>
                        <input asp-for="Point" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" asp-for="IsSecret">
                            <label class="custom-control-label" asp-for="IsSecret"></label>
                        </div>
                    </div>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
