@model TestcaseScoreModel
@{ Layout = null; }

<form asp-route-pid="@ViewData["pid"]" asp-action="Score" method="post">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Update score</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Testcase rank</label>
                        <div class="input-group">
                            <input asp-for="Lower" class="form-control" />
                            <div class="input-group-append input-group-prepend">
                                <span class="input-group-text">~</span>
                            </div>
                            <input asp-for="Upper" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Score"></label>
                        <input asp-for="Score" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
