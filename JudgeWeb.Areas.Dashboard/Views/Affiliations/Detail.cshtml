@model TeamAffiliation
@{
    ViewData["Title"] = "Affiliation: " + Model.FormalName;
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-4">
        <table class="table table-sm table-striped">
            <tr><th>ID</th><td>@Model.AffiliationId</td></tr>
            <tr><th>Shortname</th><td>@Model.ExternalId</td></tr>
            <tr><th>Name</th><td>@Model.FormalName</td></tr>
            <tr><th>Country</th><td>@(Model.CountryCode ?? "(none)")</td></tr>
            <tr><th>Logo</th><td><img src="~/images/affiliations/@(Model.ExternalId).png" width="40" height="40" /></td></tr>
        </table>
    </div>
</div>

<div class="mb-4">
    <p>
        <a asp-route-affid="@Model.AffiliationId" asp-action="Edit" class="btn btn-primary" title="Edit"><i class="fas fa-edit"></i>&nbsp;Edit</a>
        <a asp-route-affid="@Model.AffiliationId" asp-action="Delete" class="btn btn-danger" title="Delete" data-toggle="ajaxWindow"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
    </p>
</div>
