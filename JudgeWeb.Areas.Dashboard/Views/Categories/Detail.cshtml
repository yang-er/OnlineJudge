@model TeamCategory
@{
    ViewData["Title"] = "Category " + Model.CategoryId;
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-4">
        <table class="table table-sm table-striped">
            <tr><th>ID</th><td>@Model.CategoryId</td></tr>
            <tr><th>Name</th><td>@Model.Name</td></tr>
            <tr><th>Sortorder</th><td>@Model.SortOrder</td></tr>
            <tr><th>Color</th><td style="background:@Model.Color">@Model.Color</td></tr>
            <tr><th>Visible</th><td>@(Model.IsPublic ? "Yes" : "No")</td></tr>
        </table>
    </div>
</div>

<div class="mb-4">
    <p>
        <a asp-route-catid="@Model.CategoryId" asp-action="Edit" class="btn btn-primary" title="Edit"><i class="fas fa-edit"></i>&nbsp;Edit</a>
        <a asp-route-catid="@Model.CategoryId" asp-action="Delete" class="btn btn-danger" title="Delete" data-toggle="ajaxWindow"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
    </p>
</div>
