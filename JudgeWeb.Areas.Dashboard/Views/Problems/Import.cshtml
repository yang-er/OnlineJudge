@{ Layout = null; }

<form asp-action="Import" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Import Problem</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="mytype">Type</label>
                        <select id="mytype" name="type" class="form-control">
                            <option value="kattis">Kattis Package</option>
                            <option value="xysxml">XiaoYang's XML</option>
                            <option value="hustoj">HUSTOJ FPS XML</option>
                            <option value="cfplyg">CodeForces Polygon (Linux)</option>
                            <option value="data">Data</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="customFile">File</label>
                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <p>
                        After import, a new problem will be created.
                    </p>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
