@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActiveAction"] = "TwoFactorAuthentication";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <strong>This action generates new recovery codes.</strong>
    <br />
    If you lose your device and don't have the recovery codes you will lose access to your account.
    <br />
    Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should <a asp-action="ResetAuthenticatorWarning">reset your authenticator keys.</a>
</div>

<div>
    <form asp-action="GenerateRecoveryCodes" method="post" class="form-group">
        <button class="btn btn-danger" type="submit">Generate Recovery Codes</button>
    </form>
</div>
