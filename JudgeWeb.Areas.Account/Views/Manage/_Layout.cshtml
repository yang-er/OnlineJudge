@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <h2>Manage your account</h2>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked flex-column">
                <li class="nav-item"><a class="nav-link" active-vd="Index" asp-action="Index">Profile</a></li>
                <li class="nav-item"><a class="nav-link" active-vd="ChangePassword" asp-action="ChangePassword">Password</a></li>
                <li class="nav-item"><a class="nav-link" active-vd="ExternalLogins" asp-action="ExternalLogins">External logins</a></li>
                <li class="nav-item"><a class="nav-link" active-vd="TwoFactorAuthentication" asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
