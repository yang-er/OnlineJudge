@model UserRoleModel
@{ Layout = null; }

<form asp-route-uid="" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Role User #@Model.UserId</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input asp-for="UserId" type="hidden" />
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" asp-for="SiteAdministrator" />
                            <label class="custom-control-label" asp-for="SiteAdministrator">@Html.DisplayNameFor(m => m.SiteAdministrator)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" asp-for="ProblemProvider" />
                            <label class="custom-control-label" asp-for="ProblemProvider">@Html.DisplayNameFor(m => m.ProblemProvider)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" asp-for="GuideWriter" />
                            <label class="custom-control-label" asp-for="GuideWriter">@Html.DisplayNameFor(m => m.GuideWriter)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" asp-for="SubmissionBlocked" />
                            <label class="custom-control-label" asp-for="SubmissionBlocked">@Html.DisplayNameFor(m => m.SubmissionBlocked)</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
