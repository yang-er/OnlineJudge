@{
    Layout = null;
    if (!ViewData.ContainsKey("MsgType"))
    {
        ViewData["MsgType"] = "success";
    }
}

<form method="post" asp-area="@ViewData["AreaName"]" asp-controller="@ViewData["ControllerName"]" asp-action="@ViewData["ActionName"]" asp-all-route-data="@((Dictionary<string,string>)ViewData["RouteValues"])">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        @ViewData["Message"]
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-@ViewData["MsgType"]">Ok</button>
                </div>
            </div>
        </div>
    </div>
</form>
