@model TeamCodeSubmitModel
@{
    Layout = null;
    var prv = (ContestProblem[])ViewData["Problems"];
    var lang = (Dictionary<int,string>)ViewData["Languages"];
}

<form asp-action="Submit" method="post" name="submit_problem">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" style="max-width:800px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">
                        Submit
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="required" asp-for="Problem"></label>
                        <select asp-for="Problem" id="submit-prob" required class="form-control custom-select form-control">
                            <option value="" selected>Select a problem</option>
                            @foreach (var prob in prv)
                            {
                                <option value="@prob.ShortName">@prob.ShortName - @prob.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="required" asp-for="Language">Language</label>
                        <select asp-for="Language" id="submit-lang" required class="form-control custom-select form-control">
                            <option value="" selected>Select a language</option>
                            @foreach (var l in lang)
                            {
                                <option value="@l.Key">@l.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="required" asp-for="Code"></label>
                        <textarea asp-for="Code" required class="form-control" style="min-height:20em;font-family:SFMono-Regular,Menlo,Monaco,Consolas,'Liberation Mono','Courier New',monospace;"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn-success btn">
                        <i class="fas fa-cloud-upload-alt"></i> Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {
        $('form[name="submit_problem"]').on('submit', function () {
            var question =
                'Problem: ' + $('#submit-prob').find('option:selected').text() + '\n' +
                'Language: ' + $('#submit-lang').find('option:selected').text() + '\n' +
                '\nMake submission?';
            return confirm(question);
        });
    });
</script>