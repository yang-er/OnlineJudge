@model JuryMarkdownModel
@{
    ViewData["Title"] = "Edit contest";
    ViewData["DisableAjaxRefresh"] = true;
}

<h1 class="mt-3">Edit description for c@(ViewBag.ContestId)</h1>

<link rel="stylesheet" href="~/static/css/editormd.css" />
<script src="~/static/editormd.js"></script>

<form method="post" class="setting-form-group">
    <div style="height:640px">
        <div id="editormd"><textarea style="display:none;" asp-for="Markdown"></textarea></div>
    </div>

    <script type="text/javascript">
        $(function () {
            var editor = editormd({
                id: "editormd",
                path: "/static/lib/",
                tex: true,
            });
            editormd.katexURL = {
                js: "//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.3.0/katex.min",
                css: "//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.3.0/katex.min"
            };
        });
    </script>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary"> Save </button>
    </div>
</form>
