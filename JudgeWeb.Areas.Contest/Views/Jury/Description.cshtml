@model JuryMarkdownModel
@{
    ViewData["Title"] = "Edit contest";
    ViewData["DisableAjaxRefresh"] = true;
}

<h2 class="mt-2">Edit description for c@(ViewBag.ContestId)</h2>

<link rel="stylesheet" href="~/static/css/editormd.css" />
<script src="~/static/editormd.js"></script>

<form method="post" class="setting-form-group">
    <div style="height:640px">
        <div id="editormd"><textarea style="display:none;" asp-for="Markdown"></textarea></div>
    </div>

    <script type="text/javascript">
        $(function () {
            var editor = editormd({
                id: "editormd",
                path: "/static/lib/",
                tex: true,
                imageUpload: true,
                imageFormats: ["jpg", "jpeg", "gif", "png"],
                imageUploadURL: "/api/static/images-upload?type=c&id=@(ViewBag.ContestId)",
            });
            editormd.katexURL = {
                js: "/static/katex.min",
                css: "/static/katex.min"
            };
        });
    </script>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary"> Save </button>
    </div>
</form>
