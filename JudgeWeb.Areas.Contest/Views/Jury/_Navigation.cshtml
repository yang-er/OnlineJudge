@inject UserManager UserManager

<ul class="navbar-nav mr-auto">
    <li class="nav-item">
        <a class="nav-link" active-act="Home" asp-action="Home">
            <i class="fas fa-home d-md-none"></i>
            Home
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link" active-act="Team" asp-route-teamid="" asp-route-act="" asp-action="Team" id="menu_teams">
            <i class="fas fa-address-book d-md-none"></i>
            Teams
            <span class="badge badge-warning" id="num-alerts-teams">@ViewBag.ptc</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link" active-act="Clarification" asp-action="Clarification" asp-route-clarid="" asp-route-teamto="" id="menu_clarifications">
            <i class="fas fa-comments d-md-none"></i>
            Clarifications
            <span class="badge badge-info" id="num-alerts-clarifications">@ViewBag.ucc</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link" active-act="Submission" asp-route-sid="" asp-route-gid="" asp-action="Submission">
            <i class="fas fa-file-code d-md-none"></i>
            Submissions
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" active-act="Scoreboard" asp-action="Scoreboard">
            <i class="fas fa-list-ol d-md-none"></i>
            Scoreboard
        </a>
    </li>
</ul>

<script>
    function setUnsolvedTeamCount(n) {
        if (n == 0) {
            $("#menu_teams").removeClass("text-warning");
            $("#num-alerts-teams").hide();
        } else {
            $("#menu_teams").removeClass("text-warning").addClass("text-warning");
            $("#num-alerts-teams").text(n);
            $("#num-alerts-teams").hide().show();
        }
    }

    function setUnsolvedClarificationCount(n) {
        if (n == 0) {
            $("#menu_clarifications").removeClass("text-info");
            $("#num-alerts-clarifications").hide();
        } else {
            $("#menu_clarifications").removeClass("text-info").addClass("text-info");
            $("#num-alerts-clarifications").text(n);
            $("#num-alerts-clarifications").hide().show();
        }
    }
</script>

<div id="submitbut">
    <a class="nav-link justify-content-center" data-toggle="ajaxWindow" data-target="submit" asp-action="Submit">
        <button type="button" class="btn btn-success btn-sm">
            <i class="fas fa-cloud-upload-alt"></i> Submit
        </button>
    </a>
</div>

<ul class="navbar-nav">
    <li class="ajax-loader-container">
        <div class="spinner-border spinner-border-sm ajax-loader" style="display: none;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user"></i> @UserManager.GetUserName(User)
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item disabled" href="#">@(UserManager.GetNickName(User) ?? UserManager.GetUserName(User))</a>

            <a class="dropdown-item d-none" href="#" id="notify_disable">
                <i class="fas fa-bell-slash fa-fw"></i> Disable Notifications
            </a>

            <a class="dropdown-item d-none" href="#" id="notify_enable">
                <i class="fas fa-bell fa-fw"></i> Enable Notifications
            </a>

            @if (!ViewData.ContainsKey("DisableAjaxRefresh"))
            {
                <a class="dropdown-item" href="#" id="refresh-navitem">
                    <i class="fas fa-sync-alt fa-fw"></i>
                    <span id="refresh-toggle">
                        Disable Refresh
                    </span>
                    <span class="small text-muted">(@ViewData["RefreshSpan"]s)</span>
                </a>
            }

            <a class="dropdown-item" asp-area="Misc" asp-controller="Home" asp-action="Index">
                <i class="fas fa-sign-out-alt fa-fw"></i> Back to main site
            </a>
        </div>
    </li>
</ul>
