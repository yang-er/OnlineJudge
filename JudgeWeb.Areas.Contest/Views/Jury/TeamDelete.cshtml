@model JuryDeleteTeamModel
@{ Layout = null; }

<form asp-action="TeamDelete" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <input type="hidden" asp-for="ToDelete" />
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Delete team @Model.ToDelete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete @(Model.ToDelete).
                    </p>
                    <p>
                        Are you sure?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>