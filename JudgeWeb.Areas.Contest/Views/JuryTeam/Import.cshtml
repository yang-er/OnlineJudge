@{ Layout = null; }

<form asp-action="Import" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Team Import</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="file">TSV File</label>
                        <div class="custom-file">
                            <input name="file" type="file" class="custom-file-input" id="file" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <small class="text-muted mt-2">
                            For each line in tsv, it should be <code>[name]\t[affname]\t[category]\t[uid]</code>.
                        </small>
                    </div>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
