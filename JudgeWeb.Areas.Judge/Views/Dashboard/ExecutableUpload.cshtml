@model ExecutableUploadModel
@{ Layout = null; }

<form asp-action="Executable" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Upload Executable</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="ID"></label>
                        <input asp-for="ID" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Type"></label>
                        <select class="custom-select" asp-for="Type">
                            <option value="compile">compile</option>
                            <option value="compare">compare</option>
                            <option value="run">run</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="UploadContent"></label>
                        <div class="custom-file">
                            <input asp-for="UploadContent" class="custom-file-input" id="outputFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
