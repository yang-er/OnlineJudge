@model TeamAffiliation
@{ Layout = null; }

<form asp-action="Affiliation" asp-route-affid="@Model.AffiliationId" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'@ViewData["HandleKey2"]','@ViewData["HandleKey"]');return false">
    <div class="modal fade" id="modal-@ViewData["HandleKey"]" tabindex="-1" role="dialog" aria-labelledby="modal-@ViewData["HandleKey"]-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-@ViewData["HandleKey"]-label">Update Team Affiliation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Affiliation ID</label>
                        <div class="form-control">
                            @Model.AffiliationId
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExternalId">Short Name (should be lowercase)</label>
                        <input asp-for="ExternalId" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FormalName">Formal Name</label>
                        <input asp-for="FormalName" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="logo">Logo Image</label>
                        <div class="custom-file">
                            <input name="logo" accept="image/png" type="file" class="custom-file-input" id="logo" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
