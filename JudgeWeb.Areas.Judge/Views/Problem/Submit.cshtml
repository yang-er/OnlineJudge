@model CodeSubmitModel
@{ 
    IEnumerable<SelectListItem> langs = ViewBag.Language;
}

<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <h2>Submit Code</h2>
    <h5>@ViewData["ProblemId"]# @ViewData["ProblemTitle"]</h5>

    <form asp-action="Submit" asp-route-pid="@ViewData["ProblemId"]" method="post">
        <input type="hidden" asp-for="ProblemId" />
        <div class="form-group">
            <label asp-for="Language"></label>
            <select class="form-control" asp-for="Language" asp-items="langs"></select>
        </div>
        <div class="form-group">
            <label asp-for="Code"></label>
            <textarea class="form-control" asp-for="Code" style="min-height:25em;font-family:SFMono-Regular,Menlo,Monaco,Consolas,'Liberation Mono','Courier New',monospace;"></textarea>
        </div>
        <div class="form-group">
            <input class="btn btn-success" name="submit" type="submit" value=" Submit " />
        </div>
    </form>
</div>