@model ProblemMarkdownModel
@{ ViewData["Title"] = "Markdown Editor"; }

<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <h2>@ViewData["Title"]</h2>
    <h5 class="mb-3">@Model.Target@@@Model.BackingStore</h5>

    <link rel="stylesheet" href="~/static/style/editormd.css" />
    <script src="~/static/script/editormd.js"></script>

    <form method="post" class="setting-form-group">
        <input type="hidden" asp-for="BackingStore" />
        <input type="hidden" asp-for="Target" />

        <div style="height:640px">
            <div id="editormd"><textarea style="display:none;" asp-for="Markdown"></textarea></div>
        </div>

        <script type="text/javascript">
            $(function () {
                var editor = editormd({
                    id: "editormd",
                    path: "/static/editormd/",
                    tex: true,
                });
                editormd.katexURL = {
                    js: "//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.3.0/katex.min",
                    css: "//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.3.0/katex.min"
                };
            });
        </script>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary"> Save </button>
        </div>
    </form>
</div>
